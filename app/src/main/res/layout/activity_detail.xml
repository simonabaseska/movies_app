<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.feit.myapp.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/moviesImageDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/titleDetail"
            style="@style/MoviesDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/moviesImageDetail"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/title_placeholder" />
        <TextView
            android:id="@+id/newsTitleDetail"
            style="@style/MoviesDetailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/moviesImageDetail"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/news_label"
            android:textColor="?android:textColorSecondary" />
        <TextView
            android:id="@+id/subTitleDetail"
            style="@style/MoviesDetailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsTitleDetail"
            android:padding="@dimen/activity_horizontal_margin" />
    </RelativeLayout>
</ScrollView>